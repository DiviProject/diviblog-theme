<div class="section-block content-inner">
  <div class="blog-masonry grid-container fade-in-progressively" data-layout-mode="masonry" data-grid-ratio="1.5" data-animate-resize data-animate-resize-duration="0">
    <div class="row">
      <div class="column width-12">
        <div class="row grid content-grid-3 clearfix">
          {{#foreach posts}}
            {{#if @first}}
            <div class="grid-item grid-sizer">
              <article class="post">
                <div class="post-media">
                  <div class="thumbnail img-scale-in" data-hover-easing="easeInOut" data-hover-speed="700" data-hover-bkg-color="#ffffff" data-hover-bkg-opacity="0.9">
                    <a class="overlay-link" href="{{url}}">
                      <img src="{{feature_image}}" alt="featured-image" />
                      <span class="overlay-info">
                        <span>
                          <span>
                            {{{title}}}
                          </span>
                        </span>
                      </span>
                    </a>
                  </div>
                </div>
                <div class="post-content with-background">
                  <h2 class="post-title">
                    <a href={{url}}>{{{title}}}</a>
                  </h2>
                  <div class="post-info">
                    <span class="post-date">
                      <time datetime="{{date format=" YYYY-MM-DD "}}">
                        {{date format='DD MMM YYYY'}}
                      </time>
                    </span>
                  </div>
                  <section>
                    <p>{{content words="25"}}</p>
                  </section>
                </div>
              </article>
            </div>
            {{else}}
            <div class="grid-item">
              <article class="post">
                <div class="post-media">
                  <div class="thumbnail img-scale-in" data-hover-easing="easeInOut" data-hover-speed="700" data-hover-bkg-color="#ffffff" data-hover-bkg-opacity="0.9">
                    <a class="overlay-link" href="{{url}}">
                      <img src="{{feature_image}}" alt="featured-image" />
                      <span class="overlay-info">
                        <span>
                          <span>
                            {{{title}}}
                          </span>
                        </span>
                      </span>
                    </a>
                  </div>
                </div>
                <div class="post-content with-background">
                  <h2 class="post-title">
                    <a href={{url}}>{{{title}}}</a>
                  </h2>
                  <div class="post-info">
                    <span class="post-date">
                      <time datetime="{{date format=" YYYY-MM-DD "}}">
                        {{date format='DD MMM YYYY'}}
                      </time>
                    </span>
                  </div>
                  <section>
                    <p>{{content words="25"}}</p>
                  </section>
                </div>
              </article>
            </div>
            {{/if}}
          {{/foreach}}
        </div>
      </div>
    </div>
  </div>
</div>
{{> "pagination"}}